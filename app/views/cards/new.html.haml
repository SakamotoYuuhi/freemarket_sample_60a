= render "items/header"

%main.container
  .container__content
    %section.container__content--card
      %h2.container__content--card-title クレジットカード情報入力
      = form_tag url: cards_path, method: :post,class: "container__content--card-form",id: "card__form", html: {name: "inputForm"} do |f|
        .container__content--card-form-group
          .container__content--card-form-group-number
            %label(for ="payment_card_no") カード番号
            %span.container__content--card-form-group-number-require 必須
            = f.text_field :number, class: "container__content--card-form-group-number-input", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
            %ul#card-no-error-wrapper.container__content--card-form-group-number-error
              -# %li.container__content--card-form-group-number-error-text 必須項目です
            %ul.container__content--card-form-group-number-card
              %li.container__content--card-form-group-number-card-type
                =image_tag '//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?3466462615', width:'49', height:"20"
              %li.container__content--card-form-group-number-card-type
                =image_tag  "//www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?3466462615", width:"34", height:"20" 
              %li.container__content--card-form-group-number-card-type
                =image_tag  "//www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?3466462615", width:"30", height:"20" 
              %li.container__content--card-form-group-number-card-type
                =image_tag  "//www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?3466462615", width:"32", height:"20"
              %li.container__content--card-form-group-number-card-type
                =image_tag  "//www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?3466462615", width:"21", height:"20"
              %li.container__content--card-form-group-number-card-type
                =image_tag  "//www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?3466462615", width:"32", height:"20"
              %li.container__content--card-form-group-number-card-type
                =image_tag  "//www-mercari-jp.akamaized.net/assets/img/card/discover.svg?3466462615", width:"32", height:"20"
          .container__content--card-form-group-expiration
            %label(for = "payment_card_expire") 有効期限
            %span.container__content--card-form-group-expiration-require 必須
            %br/
            .container__content--card-form-group-expiration-wrap
              = f.select :exp_month, [["--",""],["01",1],["02",2],["03",3],["04",4],["05",5],["06",6],["07",7],["08",8],["09",9],["10",10],["11",11],["12",12]],{} , class: 'container__content--card-form-group-expiration-wrap-select',id: "payment_card_expire_mm"
              %i.icon-arrow-bottom
              %span 月
            .container__content--card-form-group-expiration-wrap
              = f.select :exp_year, [["--",""],["19",2019],["20",2020],["21",2021],["22",2022],["23",2023],["24",2024],["25",2025],["26",2026],["27",2027],["28",2028],["29",2029]],{} , class: 'container__content--card-form-group-expiration-wrap-select',id: "payment_card_expire_yy"
              %i.icon-arrow-bottom
              %span 年
            %ul#expire-mm-error-wrapper.container__content--card-form-group-expiration-error
              -# %li.container__content--card-form-group-expiration-error-text 必須項目です
            %ul#expire-yy-error-wrapper.container__content--card-form-group-expiration-error
              -# %li.container__content--card-form-group-expiration-error-text 必須項目です
          .container__content--card-form-group-security
            %label(for = "payment_card_security_code") セキュリティコード
            %span.container__content--card-form-group-security-require 必須
            = f.text_field :cvc, class: "container__content--card-form-group-security-input", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "card_cvc"
            %ul#security-code-error-wrapper.container__content--card-form-group-security-error
              -# %li.container__content--card-form-group-security-error-text 必須項目です
            .container__content--card-form-group-security-help
              .container__content--card-form-group-security-help-text
                %span.container__content--card-form-group-security-help-text-question ?
                %label(for = "label") カード裏面の番号とは？
                %input( type = "checkbox" id="label" class="container__content--card-form-group-security-help-text-none") 
                .container__content--card-form-group-security-help-text-content
                  %p カードの裏面をご参照ください。
                  %br/
                  =image_tag "//www-mercari-jp.akamaized.net/assets/img/signup/seq-card.png?3466462615", width:"240"
          #card_token
          = f.submit "追加する", id: "token_submit", class: "btn-default container__content--card-form-group-btn"

  =render 'users/slide_bar'

= render "items/footer"

=render 'items/selling_btn'