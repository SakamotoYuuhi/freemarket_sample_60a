.signups-body
  .single-container	
    %header.single-header
      %h1
        =link_to "https://www.mercari.com/jp/" do
          %img(src="//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?2296184308" alt="mercari")
      %nav.progress-bar.signup-bar
        %ol.clearfix
          %li
            会員情報
            .progress-status-first-red-line
          %li
            電話番号認証
            .progress-status-second-red-line
          %li.active
            お届け先住所入力
            .progress-status-third
          %li
            支払い方法
            .progress-status
          %li
            完了
            .progress-status-last
    %main.single-main
      %section.l-single-container
        %h2.l-single-head.registration
          発送元・お届け先住所入力
        %form.l-single-inner.registration-form{action: "https://www.mercari.com/jp/signup/sms_confirmation/", method: "POST", novalidate: "novalidate"}
          %input{name: "__csrf_value", type: "hidden", value: "b2e5b4f0cff37017373d1ec91597f831808273eae11a4d39c38b6344b1d5ca243d45889a41cc3f0a721d25d7df429477f14296b17b26d2b2f105a7a00725f6400"}/
          .l-single-content
            .form-group
              %label(for= "name-kanji")お名前
              %sapn.form-require
                必須
              %input.input-default{placeholder: "山田", type: "text", value: "", name: "last-name"}
              %input.input-default{placeholder: "彩", type: "text", value: "", name: "first-name"}
            .form-group
              %label(for= "name-kana")お名前カナ
              %sapn.form-require
                必須
              %input.input-default{placeholder: "ヤマダ", type: "text", value: "", name: "last-name"}
              %input.input-default{placeholder: "アヤ", type: "text", value: "", name: "first-name"}
            .form-group
              %label(for= "postal-code")郵便番号
              %sapn.form-require
                必須
              %input.input-default{pattern: "[0-9]{3}-[0-9]{4}", placeholder: "例) 123-4567", type: "number", value: "", name: "postal-code"}
            .form-group
              %label(for="prefecture")都道府県
              %sapn.form-require
                必須
              %br/
              .select-wrap
                = fa_icon 'chevron-down'
                %select.select-default(name="prefecture")
                  %option{value: ""} 北海道
                  %option{value: ""} 青森県
                  %option{value: ""} 岩手県
                  %option{value: ""} 秋田県
                  %option{value: ""} 山形県
                  %option{value: ""} 宮城県
            .form-group
              %label(for= "city")市区町村
              %sapn.form-require
                必須
              %input.input-default{placeholder: "例) 横浜市緑区", type: "text", value: "", name: "city"}
            .form-group
              %label(for= "block")番地
              %sapn.form-require
                必須
              %input.input-default{placeholder: "例) 青山1-1-1", type: "text", value: "", name: "block"}
            .form-group
              %label(for= "building")建物名
              %sapn.form-arbitrary
                任意
              %input.input-default{placeholder: "例) 柳ビル103", type: "text", value: "", name: "building"}
            .form-group
              %label(for= "address-phone-number")電話
              %sapn.form-arbitrary
                任意
              %input.input-default{placeholder: "例) 09012345678", type: "tel", value: "", name: "address-phone-number"}
            =link_to "http://localhost:3000/signups/payment", class: "btn-default btn-red" do
              次へ進む
    %footer.single-footer
      %nav
        %ul.clearfix
          %li
            =link_to "プライバシーポリシー", "https://www.mercari.com/jp/privacy/"
          %li
            =link_to "メルカリ利用規約", "https://www.mercari.com/jp/tos/"
          %li
            =link_to "特定商取引に関する表記", "https://www.mercari.com/jp/tokutei/"
      %a.single-footer-logo{href: "https://www.mercari.com/jp/"}
        %img{alt: "mercari", height: "65", src: "//www-mercari-jp.akamaized.net/assets/img/common/common/logo-gray.svg?2296184308", width: "80"}
      %p
        %small
          &copy 2019 Mercari