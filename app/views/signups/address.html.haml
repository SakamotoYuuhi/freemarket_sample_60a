.signups-body
  .single-container	
    = render 'address_bar'
    %main.single-main
      %section.l-single-container
        %h2.l-single-head.registration
          発送元・お届け先住所入力
        = form_with model: @user, local: true, url: payment_signups_path, method: :get, class: 'l-single-inner registration-form', novalidate: 'novalidate' do |f|
          .l-single-content
            .form-group
              = f.label :address_name, "お名前"
              %sapn.form-require
                必須
              - if @user.errors.full_messages_for(:address_last_name).any?
                = f.text_field :address_last_name, placeholder: '例) 山田', class: 'input-default--has-error'
              - else
                = f.text_field :address_last_name, placeholder: '例) 山田', class: 'input-default'
              - if @user.errors.full_messages_for(:address_first_name).any?
                = f.text_field :address_first_name, placeholder: '例) 彩', class: 'input-default--has-error'
              - else
                = f.text_field :address_first_name, placeholder: '例) 彩', class: 'input-default'
              = render partial: 'error-messages', locals: { user: @user, column: "address_last_name"}
              = render partial: 'error-messages', locals: { user: @user, column: "address_first_name"}
            .form-group
              = f.label :address_name_kana, "お名前カナ"
              %sapn.form-require
                必須
              - if @user.errors.full_messages_for(:address_last_name_kana).any?
                = f.text_field :address_last_name_kana, placeholder: '例) ヤマダ', class: 'input-default--has-error'
              - else
                = f.text_field :address_last_name_kana, placeholder: '例) ヤマダ', class: 'input-default'
              - if @user.errors.full_messages_for(:address_first_name_kana).any?
                = f.text_field :address_first_name_kana, placeholder: '例) アヤ', class: 'input-default--has-error'
              - else
                = f.text_field :address_first_name_kana, placeholder: '例) アヤ', class: 'input-default'
              = render partial: 'error-messages', locals: { user: @user, column: "address_last_name_kana"}
              = render partial: 'error-messages', locals: { user: @user, column: "address_first_name_kana"}
            .form-group
              = f.label :postal_code, "郵便番号"
              %sapn.form-require
                必須
              - if @user.errors.full_messages_for(:postal_code).any?
                = f.text_field :postal_code, placeholder: '例) 123-4567', class: 'input-default--has-error'
              - else
                = f.text_field :postal_code, placeholder: '例) 123-4567', class: 'input-default'
              = render partial: 'error-messages', locals: { user: @user, column: "postal_code"}
            .form-group
              = f.label :prefecture, "都道府県"
              %sapn.form-require
                必須
              %br/
              .select-wrap
                = fa_icon 'chevron-down'
                - if @user.errors.full_messages_for(:prefecture).any?
                  = f.select :prefecture, ["北海道","青森県","秋田県","岩手県","宮城県","秋田県","山形県","福島県","茨城県","栃木県","群馬県","埼玉県","千葉県","東京都","神奈川県","新潟県","富山県","石川県","福井県","山梨県","長野県","岐阜県","静岡県","愛知県","三重県","滋賀県","京都府","大阪府","兵庫県","奈良県","和歌山県","鳥取県","島根県","岡山県","広島県","山口県","徳島県","香川県","愛媛県","高知県","福岡県","佐賀県","長崎県","熊本県","大分県","宮崎県","鹿児島県","沖縄県"],{}, class: "select-default--has-error"
                - else
                  = f.select :prefecture, ["北海道","青森県","秋田県","岩手県","宮城県","秋田県","山形県","福島県","茨城県","栃木県","群馬県","埼玉県","千葉県","東京都","神奈川県","新潟県","富山県","石川県","福井県","山梨県","長野県","岐阜県","静岡県","愛知県","三重県","滋賀県","京都府","大阪府","兵庫県","奈良県","和歌山県","鳥取県","島根県","岡山県","広島県","山口県","徳島県","香川県","愛媛県","高知県","福岡県","佐賀県","長崎県","熊本県","大分県","宮崎県","鹿児島県","沖縄県"],{}, class: "select-default"
                = render partial: 'error-messages', locals: { user: @user, column: "prefecture"}
            .form-group
              = f.label :city, "市区町村"
              %sapn.form-require
                必須
              - if @user.errors.full_messages_for(:city).any?
                = f.text_field :city, placeholder: '例) 横浜市緑区', class: 'input-default--has-error'
              - else
                = f.text_field :city, placeholder: '例) 横浜市緑区', class: 'input-default'
              = render partial: 'error-messages', locals: { user: @user, column: "city"}
            .form-group
              = f.label :block_number, "番地"
              %sapn.form-require
                必須
              - if @user.errors.full_messages_for(:block_number).any?
                = f.text_field :block_number, placeholder: '例) 青山1-1-1', class: 'input-default--has-error'
              - else
                = f.text_field :block_number, placeholder: '例) 青山1-1-1', class: 'input-default'
              = render partial: 'error-messages', locals: { user: @user, column: "block_number"}
            .form-group
              = f.label :building, "建物名"
              %sapn.form-arbitrary
                任意
              = f.text_field :building_name, placeholder: '例) 柳ビル103', class: 'input-default'
            .form-group
              = f.label :home_phone_number, "電話"
              %sapn.form-arbitrary
                任意
              = f.telephone_field :home_phone_number, placeholder: '例) 09012345678', class: 'input-default'
            = f.submit '次へ進む', class: "btn-default btn-red", class: "btn-default btn-red"
    = render 'registration_footer'