.signups-body
  .single-container	
    %header.single-header
      %h1
        =link_to "https://www.mercari.com/jp/" do
          %img(src="//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?2296184308" alt="mercari")
      %nav.progress-bar.signup-bar
        %ol.clearfix
          %li
            会員情報
            .progress-status-first-red-line
          %li
            電話番号認証
            .progress-status-second-red-line
          %li.active
            お届け先住所入力
            .progress-status-third
          %li
            支払い方法
            .progress-status
          %li
            完了
            .progress-status-last
    %main.single-main
      %section.l-single-container
        %h2.l-single-head.registration
          発送元・お届け先住所入力
        = form_for @user, url: payment_signups_path, method: :get, novalidate: "novalidate", html: {class: '.l-single-inner','.registration-form'} do |f|
          = f.hidden_field :after_save_callback
          .l-single-content
            .form-group
              = f.label :address_name, "お名前"
              %sapn.form-require
                必須
              = f.text_field :address_last_name, placeholder: '例) 山田', class: 'input-default'
              = f.text_field :address_first_name, placeholder: '例) 彩', class: 'input-default'
            .form-group
              = f.label :address_name_kana, "お名前カナ"
              %sapn.form-require
                必須
              = f.text_field :address_last_name_kana, placeholder: '例) ヤマダ', class: 'input-default'
              = f.text_field :address_first_name_kana, placeholder: '例) アヤ', class: 'input-default'
            .form-group
              = f.label :postal_code, "郵便番号"
              %sapn.form-require
                必須
              = f.number_field :postal_code, placeholder: "例) 123-4567", class: 'input-default'
            .form-group
              = f.label :prefecture, "都道府県"
              %sapn.form-require
                必須
              %br/
              .select-wrap
                = fa_icon 'chevron-down'
                = f.select :prefecture, ["北海道","青森県","秋田県","岩手県","宮城県","秋田県","山形県","福島県","茨城県","栃木県","群馬県","埼玉県","千葉県","東京都","神奈川県","新潟県","富山県","石川県","福井県","山梨県","長野県","岐阜県","静岡県","愛知県","三重県","滋賀県","京都府","大阪府","兵庫県","奈良県","和歌山県","鳥取県","島根県","岡山県","広島県","山口県","徳島県","香川県","愛媛県","高知県","福岡県","佐賀県","長崎県","熊本県","大分県","宮崎県","鹿児島県","沖縄県"], class: "select-default"
            .form-group
              = f.label :city, "市区町村"
              %sapn.form-require
                必須
              = f.text_field :city, placeholder: '例) 横浜市緑区', class: 'input-default'
            .form-group
              = f.label :block_number, "番地"
              %sapn.form-require
                必須
              = f.text_field :block_number, placeholder: '例) 青山1-1-1', class: 'input-default'
            .form-group
              = f.label :building, "建物名"
              %sapn.form-arbitrary
                任意
              = f.text_field :building_name, placeholder: '例) 柳ビル103"', class: 'input-default'
            .form-group
              = f.label :address_phone_number, "電話"
              %sapn.form-arbitrary
                任意
              = f.telephone_field :address_phone_number, placeholder: '例) 09012345678', class: 'input-default'
            = f.submit '次へ進む', class: "btn-default btn-red", class: "btn-default btn-red"
    %footer.single-footer
      %nav
        %ul.clearfix
          %li
            =link_to "プライバシーポリシー", "https://www.mercari.com/jp/privacy/"
          %li
            =link_to "メルカリ利用規約", "https://www.mercari.com/jp/tos/"
          %li
            =link_to "特定商取引に関する表記", "https://www.mercari.com/jp/tokutei/"
      %a.single-footer-logo{href: "https://www.mercari.com/jp/"}
        %img{alt: "mercari", height: "65", src: "//www-mercari-jp.akamaized.net/assets/img/common/common/logo-gray.svg?2296184308", width: "80"}
      %p
        %small
          &copy 2019 Mercari