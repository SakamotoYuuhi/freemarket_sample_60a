.signups-body
  .single-container	
    = render 'address_bar'
    %main.single-main
      %section.l-single-container
        %h2.l-single-head.registration
          発送元・お届け先住所入力
        = form_for @user,local: true, url: payment_signups_path, method: :get, html: {class: 'l-single-inner registration-form'} do |f|
          .l-single-content
            .form-group
              = f.label :address_name, "お名前"
              %sapn.form-require
                必須
              = f.text_field :address_last_name, placeholder: '例) 山田', class: 'input-default'
              = f.text_field :address_first_name, placeholder: '例) 彩', class: 'input-default'
            .form-group
              = f.label :address_name_kana, "お名前カナ"
              %sapn.form-require
                必須
              = f.text_field :address_last_name_kana, placeholder: '例) ヤマダ', class: 'input-default'
              = f.text_field :address_first_name_kana, placeholder: '例) アヤ', class: 'input-default'
            .form-group
              = f.label :postal_code, "郵便番号"
              %sapn.form-require
                必須
              = f.number_field :postal_coad, placeholder: '例) 123-4567', class: 'input-default'
            .form-group
              = f.label :prefectuer, "都道府県"
              %sapn.form-require
                必須
              %br/
              .select-wrap
                = fa_icon 'chevron-down'
                = f.select :prefectuer, ["北海道","青森県","秋田県","岩手県","宮城県","秋田県","山形県","福島県","茨城県","栃木県","群馬県","埼玉県","千葉県","東京都","神奈川県","新潟県","富山県","石川県","福井県","山梨県","長野県","岐阜県","静岡県","愛知県","三重県","滋賀県","京都府","大阪府","兵庫県","奈良県","和歌山県","鳥取県","島根県","岡山県","広島県","山口県","徳島県","香川県","愛媛県","高知県","福岡県","佐賀県","長崎県","熊本県","大分県","宮崎県","鹿児島県","沖縄県"],{}, class: "select-default"
            .form-group
              = f.label :city, "市区町村"
              %sapn.form-require
                必須
              = f.text_field :city, placeholder: '例) 横浜市緑区', class: 'input-default'
            .form-group
              = f.label :block_number, "番地"
              %sapn.form-require
                必須
              = f.text_field :block_number, placeholder: '例) 青山1-1-1', class: 'input-default'
            .form-group
              = f.label :building, "建物名"
              %sapn.form-arbitrary
                任意
              = f.text_field :building_name, placeholder: '例) 柳ビル103', class: 'input-default'
            .form-group
              = f.label :home_phone_number, "電話"
              %sapn.form-arbitrary
                任意
              = f.telephone_field :home_phone_number, placeholder: '例) 09012345678', class: 'input-default'
            = f.submit '次へ進む', class: "btn-default btn-red", class: "btn-default btn-red"
    = render 'registration_footer'