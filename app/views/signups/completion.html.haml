.signups-body  
  .single-container
    = render 'completion_bar'
    %main.single-main
      %section.l-single-container
        %h2.l-single-head.registration
          会員登録完了
        .l-single-inner.registration-form
          .l-single-content
            .form-group
              %p.last-message
                ありがとうございます。
                %br/
                会員登録が完了しました。
            = link_to root_path, class: 'btn-default btn-red' do
              メルカリをはじめる
    %aside.app-banner-registration
      .app-banner-pc
        .app-banner-pc-inner
          %h2
            \\ スマホでかんたんフリマアプリ /
          %p
            今すぐ無料ダウンロード!
          .app-banner-icon.clearfix
            %figure
              %img{src:"//www-mercari-jp.akamaized.net/assets/img/common/common/mercari_icon.png?3466462615", width: "40", alt:""}
            %ul.clearfix
              %li
                =link_to "https://itunes.apple.com/jp/app/id667861049?l=ja&amp;mt=8", target: "_blank" do
                  %img{src: "//www-mercari-jp.akamaized.net/assets/img/common/common/app-store.svg?3466462615", alt:"", width: "133", height: "40"}
              %li
                =link_to "https://play.google.com/store/apps/details?id=com.kouzoh.mercari&amp;hl=ja", target: "_blank" do
                  %img{src: "//www-mercari-jp.akamaized.net/assets/img/common/common/google-play.svg?3466462615", alt:"", width: "133", height: "40"}
        %figure
          %img{src: "//www-mercari-jp.akamaized.net/assets/img/common/jp/download_content_pc.png?3466462615", alt:""}
    = render 'registration_footer'