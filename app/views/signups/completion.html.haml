.signups-body  
  .single-container	
    %header.single-header
      %h1
        =link_to "http://localhost:3000" do
          %img(src="//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?2296184308" alt="mercari")
      %nav.progress-bar.signup-bar
        %ol.clearfix
          %li
            会員情報
            .progress-status-first-red-line
          %li
            電話番号認証
            .progress-status-second-red-line
          %li
            お届け先住所入力
            .progress-status-third-red-line
          %li
            支払い方法
            .progress-status-force-red-line
          %li.active
            完了
            .progress-status-last-red-line
    %main.single-main
      %section.l-single-container
        %h2.l-single-head.registration
          会員登録完了
        = form_for @user, url: phonenumber_signups_path, method: :get, novalidate: "novalidate", html: {class: '.l-single-inner','.registration-form'} do |f|
          = f.hidden_field :__csrf_value, value: "b2e5b4f0cff37017373d1ec91597f831808273eae11a4d39c38b6344b1d5ca243d45889a41cc3f0a721d25d7df429477f14296b17b26d2b2f105a7a00725f6400"
          .l-single-content
            .form-group
              %p.last-message
                ありがとうございます。
                %br/
                会員登録が完了しました。
            = f.submit 'メルカリをはじめる', class: "btn-default btn-red"
    %aside.app-banner-registration
      .app-banner-pc
        .app-banner-pc-inner
          %h2
            \\ スマホでかんたんフリマアプリ /
          %p
            今すぐ無料ダウンロード!
          .app-banner-icon.clearfix
            %figure
              %img{src:"//www-mercari-jp.akamaized.net/assets/img/common/common/mercari_icon.png?3466462615", width: "40", alt:""}
            %ul.clearfix
              %li
                =link_to "https://itunes.apple.com/jp/app/id667861049?l=ja&amp;mt=8", target: "_blank" do
                  %img{src: "//www-mercari-jp.akamaized.net/assets/img/common/common/app-store.svg?3466462615", alt:"", width: "133", height: "40"}
              %li
                =link_to "https://play.google.com/store/apps/details?id=com.kouzoh.mercari&amp;hl=ja", target: "_blank" do
                  %img{src: "//www-mercari-jp.akamaized.net/assets/img/common/common/google-play.svg?3466462615", alt:"", width: "133", height: "40"}
        %figure
          %img{src: "//www-mercari-jp.akamaized.net/assets/img/common/jp/download_content_pc.png?3466462615", alt:""}
    %footer.single-footer
      %nav
        %ul.clearfix
          %li
            =link_to "プライバシーポリシー", "https://www.mercari.com/jp/privacy/"
          %li
            =link_to "メルカリ利用規約", "https://www.mercari.com/jp/tos/"
          %li
            =link_to "特定商取引に関する表記", "https://www.mercari.com/jp/tokutei/"
      %a.single-footer-logo{href: "http://localhost:3000"}
        %img{alt: "mercari", height: "65", src: "//www-mercari-jp.akamaized.net/assets/img/common/common/logo-gray.svg?2296184308", width: "80"}
      %p
        %small
          &copy 2019 Mercari