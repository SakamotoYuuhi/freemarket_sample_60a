%main.container
  .container__content

    %section.container__content--mypage
      =link_to "",class:"container__content--mypage-user" do
        %figure.container__content--mypage-user-img
          = image_tag '/merukari_member_photo.png', class:'container__content--mypage-user-img-new'
        %h2.container__content--mypage-user-name  晃平
        .container__content--mypage-user-number
