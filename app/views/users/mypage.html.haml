                = image_tag '/mercari_profile.png', class:'container__content--tabs-detail-notice-list-link-body-img'
              .container__content--tabs-detail-notice-list-link-message
                .container__content--tabs-detail-notice-list-link-message-text 
                  ああああああああああ
                .container__content--tabs-detail-notice-list-link-message-time
                  = fa_icon 'picture-o', class: 'icon-time'
                  %span １時間
              = fa_icon 'chevron-right', class: 'icon-chevron'

          %li.container__content--tabs-detail-notice-listing
            %a(href= "" class="container__content--tabs-detail-notice-listing-btn")
              一覧を見る     
