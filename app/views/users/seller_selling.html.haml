= render "items/header"

%main.container
  .container__content
    %section.container__content--group
      %h2.container__content--group-head-selling 出品した商品
      %ul.container__content--group-tabs
        %li.container__content--group-tabs-list-active
          %h3
            =link_to "出品中","",class:"container__content--group-tabs-list-active-name"
        %li.container__content--group-tabs-list
          %h3
            =link_to "取引中","",class:"container__content--group-tabs-list-name"
        %li.container__content--group-tabs-list
          %h3
            =link_to "売却済","",class:"container__content--group-tabs-list-name"
      .container__content--group-wrap
        %ul.container__content--group-wrap-listing
          - @item_selling.each do |item|
            %li 
              =link_to select_item_path(item),class:"container__content--group-wrap-listing-item" do
                %figure
                  = image_tag "#{item.images.first.image}", class:'container__content--group-wrap-listing-item-image'
                .container__content--group-wrap-listing-item-info
                  .container__content--group-wrap-listing-item-info-text
                    = "「#{item.title}」"
                  .container__content--group-wrap-listing-item-info-box
                    %span.container__content--group-wrap-listing-item-info-box-count
                      %i.icon-like
                      %span 0
                    %span.container__content--group-wrap-listing-item-info-box-count
                      %i.icon-message
                      %span 0
                    .container__content--group-wrap-listing-item-info-box-text-status
                      出品中
                %i.icon-arrow-right

    %ul.container__content--pager
      %li.container__content--pager-prev 
        =link_to "",class:"container__content--pager-prev-link " do
          %i.icon-arrow-left 
      %li.container__content--pager-next
        =link_to "",class:"container__content--pager-next-link" do
          %i.icon-arrow-right

  =render 'slide_bar'

= render "items/footer"

=render 'items/selling_btn'