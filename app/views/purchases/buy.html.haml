.signups-body
  .single-container	
    = render 'signups/sub-header'
    %main.single-main
      %section.l-single-container.buy
        =render 'items/pop-transact'
        %h2.l-single-head
          購入が完了しました
        %section.buy__content.buy-item
          .buy__content__inner
            %h3.buy-item-image
              = image_tag "#{@item.images.first.image}"
            %p.buy-item-name
              =@item.title
        %section.buy__content.buy-item
          .buy__content__inner
            %p.buy-price
              = "¥#{@item.price.to_s(:delimited)}"
              %span.buy-span-fee
                送料込み
        %section.buy__content.buy-user
          .buy__content__inner
            %h3 配送先
            %address.buy-user__text
            %p.buy-user__text
              = "〒#{current_user.postal_code}"
              %br
              = "#{current_user.prefecture}" + "#{current_user.city}" + "#{current_user.block_number}" + "#{current_user.building_name}" 
              %br
              = "#{current_user.last_name}" + "#{current_user.first_name}"
        %section.buy__content.buy-user
          .buy__content__inner
            %h3 支払い方法
            %p.buy-user__text
              = "**** **** **** " + @default_card_information.last4
              %br
              - exp_month = @default_card_information.exp_month.to_s
              - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
              = exp_month + " / " + exp_year
            %figure
              =image_tag src="https://www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?1248199994",class:"card-image"
        %section.buy__content.buy-flow
          %h3 発想通知後の流れ
          .review-icon
            %i.fas.fa-laugh
            %i.fas.fa-meh
            %i.fas.fa-frown
          %p
            商品を受け取ったら
            %br
            出品者の評価をしましょう。
            %br
            購入代金が出品者に振り込まれます。
            %br
            評価後に取引は完了です。
          =link_to "マイページへ戻る", mypage_users_path
    = render 'signups/sub-footer'                                 